
https://www.freedesktop.org/software/systemd/man/systemd.time.html
https://www.freedesktop.org/software/systemd/man/systemd.timer.html#
https://www.freedesktop.org/software/systemd/man/systemd.unit.html

Commands:
# reloads all services/timers
sudo systemctl daemon-reload  

# lists all active timers
sudo systemctl list-timers



Timer files: test.timer
[Unit]                                                    
Description=Timer for test service                        
                                                          
[Timer]                                                   
# every minute
OnCalendar=*-*-* *:*:*                                    

# service to run
Unit=test.service                                         

# if it missed a trigger, it will catch up
Persistent=true                                           
                                                          
[Install]                                                 
# Im pretty sure this is what actually makes it trigger
WantedBy=timers.target                                    


Service File: test.service
[Unit]                                                
Description=Learning Systemd                          
                                                      
                                                      
[Service]                                             
# there are other options outlined in systemd.unit docs
Type=simple                                           
# run this command MUST BE EXECUTABLE WITH #!/bin/bash IN THE FIRST LINE
ExecStart=/home/fargus/Scripts/service.sh             
